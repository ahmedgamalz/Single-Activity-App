<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ImageView
        android:src="@drawable/android_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.2"
        app:layout_constraintTop_toBottomOf="@id/google"
        />
    <ImageView
        android:id="@+id/google"
        android:src="@drawable/google_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:id="@+id/google_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/google_details"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/google"/>
    <TextView
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/baseline_location_city_24"
        android:drawablePadding="4dp"
        android:id="@+id/google_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/google_address"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/google_details"/>
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/google_website"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:drawableStart="@drawable/baseline_public_24"
        android:drawablePadding="4dp"
        app:layout_constraintTop_toBottomOf="@id/google_address"/>

</androidx.constraintlayout.widget.ConstraintLayout>